<!--index.wxml-->
<view class="container">
  <scroll-view bindtap="bindViewTap" class="userinfo">
    <image class="product" src="images/gangbing1.jpg"></image>
    <!-- <image class="userinfo-avatar" src="{{userInfo.avatarUrl}}" background-size="cover"></image>
    <text class="userinfo-nickname">{{userInfo.nickName}}</text> -->
  </scroll-view>

  <view class="row" bindtap="tap1">
    <image class="thumbnail" src="../images/0.png"></image>
    <rich-text class="thumbnail" nodes="{{nodes}}" >
      产品1
    </rich-text>
    单价：{{priceLst[0]}}
    <rich-text bindtap="countMinus">
      -
    </rich-text>
    <rich-text bindtap="countAdd">
      +
    </rich-text>
    {{countLst[0]}}
  </view>
  <view class="row" bindtap="tap2">
    <image class="thumbnail" src="../images/1.png"></image>
    <rich-text class="thumbnail" nodes="{{nodes}}">
      产品2
    </rich-text>
    单价：{{priceLst[1]}}
    <rich-text bindtap="countMinus">
      -
    </rich-text>
    <rich-text bindtap="countAdd">
      +
    </rich-text>
    {{countLst[1]}}
  </view>
  <view class="row" bindtap="tap3">
    <image class="thumbnail" src="../images/2.png"></image>
    <rich-text class="thumbnail" nodes="{{nodes}}">
      产品3
    </rich-text>
    单价：{{priceLst[2]}}
    <rich-text bindtap="countMinus">
      -
    </rich-text>
    <rich-text bindtap="countAdd">
      +
    </rich-text>
    {{countLst[2]}}
  </view>
  <view class="row" bindtap="tap4">
    <image class="thumbnail" src="../images/3.png"></image>
    <rich-text class="thumbnail" nodes="{{nodes}}">
      产品4
    </rich-text>
    单价：{{priceLst[3]}}
    <rich-text bindtap="countMinus">
      -
    </rich-text>
    <rich-text bindtap="countAdd">
      +
    </rich-text>
    {{countLst[3]}}
  </view>
  <view class="row" bindtap="tap5">
    <image class="thumbnail" src="../images/4.png"></image>
    <rich-text class="thumbnail" nodes="{{nodes}}">
      产品5
    </rich-text>
    单价：{{priceLst[4]}}
    <rich-text bindtap="countMinus">
      -
    </rich-text>
    <rich-text bindtap="countAdd">
      +
    </rich-text>
    {{countLst[4]}}
  </view>

  <view class="container carts-list">
    <view wx:for="{{carts}}" class="carts-item" data-title="{{item.title}}" data-url="{{item.url}}" bindtap="bindViewTap">
    <view>
     <image class="carts-image" src="{{item.image}}" mode="aspectFill"/>
    </view>
   <view class="carts-text">
    <text class="carts-title">{{item.title}}</text>
    <view class="carts-subtitle">
     <text class="carts-price">{{item.sum}}</text>
     <view class="stepper">
       <!-- 减号 -->
       <text class="{{minusStatuses[index]}}" data-index="{{index}}" bindtap="bindMinus">-</text>
       <!-- 数值 -->
       <input type="number" bindchange="bindManual" value="{{item.num}}" />
       <!-- 加号 -->
       <text class="normal" data-index="{{index}}" bindtap="bindPlus">+</text>
      </view>
    </view>
   </view>
  </view>
</view>

<view>
总金额
<text bindtap="goCharge">去结算</text>
</view>

</view>
